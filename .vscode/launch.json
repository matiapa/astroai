{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run capture sky",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/run_capture_sky.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": []
        },
        {
            "name": "Run ADK Web Server",
            "type": "debugpy",
            "request": "launch",
            "module": "google.adk.cli",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "web",
                "agents"
            ]
        },
        {
            "name": "Run FastAPI Server",
            "type": "debugpy",
            "request": "launch",
            "module": "src.api.server",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}